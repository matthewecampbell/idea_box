<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <h1>Idea Box</h1>
    </div>
    <div class="col-sm-2"></div>
  </div>

  <form id="filter-form">
     Search: <input type="text" id="idea-search">
  </form>

  <button id='sort' name='button-sort' class='btn btn-default btn-xs'>Sort</button>

  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <hr>
      <div class="form-group">
        Title<input class="form-control" type="text" id="idea-title">
      </div>
      <div class="form-group">
        Body<input class="form-control" type="text" id="idea-body">
      </div>
      <div class="form-group">
        Tags<input class="form-control" type="text" id="idea-tags">
      </div>
      <input class="btn btn-default pull-right" id="create-idea" type="button" name="submit" value="Save">
      <div class="col-sm-4">
        <button name="button-fetch" class="btn btn-default pull-right">Fetch Ideas</button>
      </div>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>

  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-4">
      <h3>Latest Ideas</h3>
      <div id="latest-ideas">
      </div>
    </div>
    <div class="col-sm-2"></div>
  </div>
